doctype html
html(lang="en")
 head
  title= pageTitle
  
  block meta
    meta(charset="utf-8")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="description" content="")
    meta(name="keywords" content="")
  
  block links
    link(rel="shortcut icon" href="/static/misc/favicon.ico")
    link(rel="stylesheet" href="/css/styleguide.css")
 body.container-fluid
  block content
    header.toolbar.row
      

    section.clearfix
      hgroup.row
        h1.col-xs-12.title Style Guide
      
    //- Colors
    section.clearfix
      hgroup.row.section-title
        h2.col-xs-12 Color Swatches
      article.content.row
        .col-xs-12.content-title
          h3 Main Colors
        .col-xs-12
          .colorSwatch.black.col-xs-3
            p #000000 - Black
          .colorSwatch.white.col-xs-3
            p #ffffff - White
        .col-xs-12.content-title
          h3 Gray Colors
        .col-xs-12
          .colorSwatch.lightGray.col-xs-3
            p #bfbfbf - Light Gray
          .colorSwatch.gray.col-xs-3
            p #8C8C8C - Gray
          .colorSwatch.darkGray.col-xs-3
            p #666666 - Dark Gray
        .col-xs-12.content-title
          h3 Theme Colors
        .col-xs-12
          .colorSwatch.primary.col-xs-3
            p #00bce7 - Blue
          .colorSwatch.secondary.col-xs-3
            p #FF0000 - Red
          .colorSwatch.accent.col-xs-3
            p #FFFF00 - Yellow
    
    //- Typography
    section.clearfix
      hgroup.row.section-title
        h2.col-xs-12 Typography
      article.content.row
        p.serif Serif Font
        p.sans-serif Sans Serif Font
        p.mono Monospace Font
    
    //- Headings
    section.clearfix
      hgroup.row.section-title
        h2.col-xs-12 Headings
      article.content.row
        h1 Heading 1
        h2 Heading 2
        h3 Heading 3
        h4 Heading 4
        h5 Heading 5
        h6 Heading 6
    
    //- Lists
    //- Buttons
    //- Forms
    //- Tables
  block scripts
    
